<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaboresdeMama.EditarRecetaPage"
             Title="Editar Receta">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="Nombre de la Receta" />
            <Entry x:Name="NombreEntry" Placeholder="Ej: Torta de chocolate" />

            <Label Text="Insumos necesarios"
                   FontAttributes="Bold"
                   Margin="0,15,0,0" />

            <Picker x:Name="InsumoPicker"
                    Title="Selecciona un insumo"
                    ItemDisplayBinding="{Binding Nombre}"
                    SelectedIndexChanged="OnInsumoSeleccionadoChanged" />

            <HorizontalStackLayout Spacing="10">
                <Entry x:Name="CantidadInsumoEntry"
                       Placeholder="Cantidad"
                       Keyboard="Numeric"
                       HorizontalOptions="FillAndExpand" />
                <Label x:Name="UnidadSeleccionadaLabel"
                       Text="Unidad: -"
                       VerticalOptions="Center" />
            </HorizontalStackLayout>

            <Button Text="Agregar insumo"
                    Clicked="OnAgregarInsumoNecesarioClicked"
                    HorizontalOptions="Start" />

            <CollectionView x:Name="InsumosCollectionView"
                            ItemsLayout="VerticalList"
                            Margin="0,10,0,0">
                <CollectionView.EmptyView>
                    <Label Text="Sin insumos configurados para esta receta."
                           FontSize="12"
                           TextColor="Gray"
                           HorizontalOptions="Center" />
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="0,5" CornerRadius="8" BorderColor="LightGray">
                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                                <VerticalStackLayout>
                                    <Label Text="{Binding InsumoNombre}" FontAttributes="Bold" />
                                    <Label Text="{Binding CantidadNecesaria, StringFormat='Cantidad: {0:F2}'}" FontSize="12" />
                                    <Label Text="{Binding Unidad, StringFormat='Unidad: {0}'}" FontSize="12" TextColor="Gray" />
                                </VerticalStackLayout>
                                <Button Text="Eliminar"
                                        BackgroundColor="IndianRed"
                                        TextColor="White"
                                        CommandParameter="{Binding .}"
                                        Clicked="OnEliminarInsumoNecesarioClicked" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label Text="Procedimiento" />
            <Editor x:Name="ProcedimientoEditor"
                    HeightRequest="300"
                    AutoSize="Disabled" />

            <Button Text="Guardar Cambios"
                    Clicked="OnGuardarCambiosClicked"
                    HorizontalOptions="Fill" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>