<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaboresdeMama.RegisterPage"
             Title="Crear Cuenta"
             BackgroundColor="{StaticResource Primary}">

    <ScrollView>
        <VerticalStackLayout 
            Padding="30,40"
            Spacing="20"
            VerticalOptions="Center">

            <Frame Padding="20" CornerRadius="15" BackgroundColor="{StaticResource White}" BorderColor="{StaticResource PastelLavender}" HasShadow="True">
                <VerticalStackLayout Spacing="15">

                    <Label Text="Registro de Cliente" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="{StaticResource Primary}" 
                           HorizontalOptions="Center" 
                           Margin="0,0,0,10"/>

                    <Entry x:Name="NombreEntry" Placeholder="Nombre Completo" />

                    <Entry x:Name="UsernameEntry" Placeholder="Usuario (Email)" />

                    <Entry x:Name="PasswordEntry" IsPassword="True" Placeholder="Contraseña" />

                    <Entry x:Name="ConfirmPasswordEntry" IsPassword="True" Placeholder="Confirmar Contraseña" />

                    <Entry x:Name="TelefonoEntry" Placeholder="Teléfono" Keyboard="Telephone" />

                    <Editor x:Name="DireccionEditor"
                            Placeholder="Dirección"
                            AutoSize="TextChanges"
                            HeightRequest="100" />

                    <Button x:Name="RegisterButton"
                            Text="Crear Cuenta"
                            Clicked="OnRegisterClicked"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            Margin="0,10,0,0"
                            HeightRequest="50"/>

                    <ActivityIndicator x:Name="LoadingIndicator" 
                                       IsRunning="False" 
                                       IsVisible="False" 
                                       Color="{StaticResource Primary}"/>

                    <Label x:Name="ErrorLabel" 
                           TextColor="{StaticResource PastelPink}" 
                           FontSize="12" 
                           HorizontalOptions="Center" 
                           IsVisible="False"/>
                </VerticalStackLayout>
            </Frame>

            <Button Text="Volver al Inicio de Sesión"
                    Clicked="OnVolverClicked"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontAttributes="Bold"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>