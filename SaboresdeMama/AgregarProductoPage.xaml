<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaboresdeMama.AgregarProductoPage"
             Title="Agregar Producto">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Nuevo Producto" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" TextColor="#5E35B1" />

            <Frame BorderColor="#ADD8E6" CornerRadius="10" Padding="10" BackgroundColor="#F7F7F7">
                <VerticalStackLayout Spacing="10">
                    <Label Text="ðŸ–¼ï¸ Imagen del Producto" FontAttributes="Bold" TextColor="#333333" />

                    <Image x:Name="ProductoImage"
                           HeightRequest="150"
                           Aspect="AspectFit"
                           BackgroundColor="#F0F8FF"
                           Source="placeholder_image.png" />

                    <Button Text="Seleccionar Imagen"
                            Clicked="OnSeleccionarImagenClicked"
                            BackgroundColor="#B3E0DC"
                            TextColor="#333333" />

                    <Entry x:Name="ImageURLEntry" IsVisible="False" />
                </VerticalStackLayout>
            </Frame>

            <Entry x:Name="NombreEntry" Placeholder="Nombre del producto *" />

            <Editor x:Name="DescripcionEditor" 
                    Placeholder="DescripciÃ³n del producto *"
                    HeightRequest="100" />

            <Entry x:Name="PrecioEntry" 
                    Placeholder="Precio *"
                    Keyboard="Numeric" />

            <Entry x:Name="StockEntry" 
                    Placeholder="Stock inicial *"
                    Keyboard="Numeric"
                    Text="0" />

            <Entry x:Name="CategoriaEntry" Placeholder="CategorÃ­a (opcional)" />

            <Editor x:Name="InformacionExtraEditor" 
                    Placeholder="InformaciÃ³n extra (opcional)"
                    HeightRequest="80" />

            <Button x:Name="GuardarButton"
                    Text="Guardar Producto"
                    Clicked="OnGuardarClicked"
                    BackgroundColor="#B3E0DC" 
                    TextColor="#333333"
                    Padding="0,15" />

            <Label x:Name="ErrorLabel"
                    TextColor="#F08080"
                    IsVisible="False"
                    HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>