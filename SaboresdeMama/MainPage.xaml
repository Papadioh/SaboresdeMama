<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:SaboresdeMama.Models"
             x:Class="SaboresdeMama.MainPage"
             Title="Panel de Pedidos">

    <ContentPage.BackgroundColor>
        <Color>#FFFEF9</Color>
    </ContentPage.BackgroundColor>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="15">

            <Label Text="🗓️ Pedidos Pendientes por Fecha" 
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Start"
                   TextColor="{StaticResource Primary}" />

            <Grid ColumnDefinitions="4*,6*">
                <DatePicker x:Name="DatePickerPedidos" 
                            Grid.Column="0"
                            DateSelected="OnDateSelected"
                            Format="D" 
                            FontSize="16"
                            VerticalOptions="Center"
                            TextColor="{StaticResource Gray600}"/>
                <Label x:Name="LabelPedidosHoy"
                       Grid.Column="1"
                       Text="Cargando..."
                       FontSize="16"
                       VerticalOptions="Center"
                       Padding="10,0,0,0"
                       TextColor="{StaticResource Gray600}" />
            </Grid>

            <BoxView HeightRequest="1" Color="{StaticResource Gray300}" Margin="0,10,0,10" />

            <Label Text="Pedidos programados (ordenados por fecha):"
                   FontSize="18"
                   FontAttributes="Bold" 
                   TextColor="{StaticResource Gray600}" />

            <CollectionView x:Name="PedidosCollectionView"
                            SelectionMode="None">
                <CollectionView.EmptyView>
                    <Label Text="🎉 No hay pedidos programados para esta fecha." 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center" 
                           TextColor="{StaticResource PastelMint}" />
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Pedido">
                        <Border StrokeThickness="1" Stroke="{StaticResource PastelBlue}" Padding="15" Margin="0,5" BackgroundColor="{StaticResource White}"
                                StrokeShape="RoundRectangle 8">
                            <Grid ColumnDefinitions="3*,Auto" ColumnSpacing="10">
                                <VerticalStackLayout Grid.Column="0">
                                    <Label Text="{Binding ClienteNombre}" FontAttributes="Bold" TextColor="{StaticResource Gray600}" />
                                    <Label Text="{Binding ClienteTelefono, StringFormat='Tel: {0}'}" FontSize="12" TextColor="{StaticResource Gray500}" />
                                    <Label Text="{Binding ClienteDireccion, StringFormat='Dir: {0}'}" FontSize="12" TextColor="{StaticResource Gray500}" />
                                    <Label Text="{Binding ProductoResumen}" FontSize="12" TextColor="{StaticResource Gray500}" />
                                    <Label Text="{Binding DetallesPedido}" FontSize="12" TextColor="{StaticResource Gray500}" LineBreakMode="TailTruncation" />
                                    <Label Text="{Binding Estado}" FontAttributes="Bold" TextColor="{Binding EstadoColor}" />
                                </VerticalStackLayout>

                                <VerticalStackLayout Grid.Column="1" Spacing="6" HorizontalOptions="End" VerticalOptions="Center">
                                    <Label Text="{Binding HoraEntrega}" FontAttributes="Bold" TextColor="{StaticResource Primary}" HorizontalOptions="End" />
                                    <Button Text="Pedido listo"
                                            Padding="10,5"
                                            BackgroundColor="{StaticResource PastelMint}"
                                            TextColor="{StaticResource Gray600}"
                                            Clicked="OnPedidoListoClicked"
                                            CommandParameter="{Binding .}"
                                            IsVisible="False">
                                        <Button.Triggers>
                                            <DataTrigger TargetType="Button" Binding="{Binding Estado}" Value="Aceptado">
                                                <Setter Property="IsVisible" Value="True" />
                                            </DataTrigger>
                                        </Button.Triggers>
                                    </Button>
                                    <Button Text="No completado"
                                            Padding="10,5"
                                            BackgroundColor="{StaticResource PastelPink}"
                                            TextColor="{StaticResource Gray600}"
                                            Clicked="OnPedidoNoCompletadoClicked"
                                            CommandParameter="{Binding .}"
                                            IsVisible="False">
                                        <Button.Triggers>
                                            <DataTrigger TargetType="Button" Binding="{Binding Estado}" Value="Completado">
                                                <Setter Property="IsVisible" Value="True" />
                                            </DataTrigger>
                                        </Button.Triggers>
                                    </Button>
                                </VerticalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>