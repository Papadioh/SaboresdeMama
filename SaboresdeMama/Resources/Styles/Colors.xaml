<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->
    <!-- Paleta de colores pasteles suaves y amigables para la vista -->

    <!-- Colores principales pasteles -->
    <Color x:Key="Primary">#B19CD9</Color> <!-- Lavanda pastel suave -->
    <Color x:Key="PrimaryDark">#9B7FC7</Color> <!-- Lavanda pastel más oscuro -->
    <Color x:Key="PrimaryDarkText">#5A4A6B</Color> <!-- Texto oscuro suave -->
    <Color x:Key="Secondary">#FFD1DC</Color> <!-- Rosa pastel -->
    <Color x:Key="SecondaryDarkText">#B8869B</Color> <!-- Rosa pastel más oscuro -->
    <Color x:Key="Tertiary">#B0E0E6</Color> <!-- Azul cielo pastel -->

    <!-- Colores base -->
    <Color x:Key="White">#FFFEFE</Color> <!-- Blanco ligeramente cálido -->
    <Color x:Key="Black">#3A3A3A</Color> <!-- Negro suave para mejor legibilidad -->
    <Color x:Key="Magenta">#FFB6C1</Color> <!-- Rosa pastel -->
    <Color x:Key="MidnightBlue">#8B9DC3</Color> <!-- Azul pastel suave -->
    <Color x:Key="OffBlack">#4A4A4A</Color> <!-- Gris oscuro suave -->

    <!-- Grises suaves pasteles -->
    <Color x:Key="Gray100">#F5F5F5</Color> <!-- Gris muy claro -->
    <Color x:Key="Gray200">#E8E8E8</Color> <!-- Gris claro -->
    <Color x:Key="Gray300">#D3D3D3</Color> <!-- Gris medio claro -->
    <Color x:Key="Gray400">#B8B8B8</Color> <!-- Gris medio -->
    <Color x:Key="Gray500">#9E9E9E</Color> <!-- Gris medio oscuro -->
    <Color x:Key="Gray600">#7A7A7A</Color> <!-- Gris oscuro suave -->
    <Color x:Key="Gray900">#5A5A5A</Color> <!-- Gris muy oscuro suave -->
    <Color x:Key="Gray950">#4A4A4A</Color> <!-- Gris casi negro suave -->

    <!-- Colores pasteles adicionales -->
    <Color x:Key="PastelPink">#FFD1DC</Color> <!-- Rosa pastel -->
    <Color x:Key="PastelBlue">#B0E0E6</Color> <!-- Azul cielo pastel -->
    <Color x:Key="PastelLavender">#E6E6FA</Color> <!-- Lavanda pastel -->
    <Color x:Key="PastelPeach">#FFE4B5</Color> <!-- Melocotón pastel -->
    <Color x:Key="PastelMint">#C8E6C9</Color> <!-- Verde menta pastel -->
    <Color x:Key="PastelYellow">#FFFACD</Color> <!-- Amarillo pastel -->
    <Color x:Key="PastelBackground">#FFFEF9</Color> <!-- Fondo crema muy suave -->

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>

    <!-- Brushes para colores pasteles -->
    <SolidColorBrush x:Key="PastelPinkBrush" Color="{StaticResource PastelPink}"/>
    <SolidColorBrush x:Key="PastelBlueBrush" Color="{StaticResource PastelBlue}"/>
    <SolidColorBrush x:Key="PastelLavenderBrush" Color="{StaticResource PastelLavender}"/>
    <SolidColorBrush x:Key="PastelPeachBrush" Color="{StaticResource PastelPeach}"/>
    <SolidColorBrush x:Key="PastelMintBrush" Color="{StaticResource PastelMint}"/>
    <SolidColorBrush x:Key="PastelYellowBrush" Color="{StaticResource PastelYellow}"/>
    <SolidColorBrush x:Key="PastelBackgroundBrush" Color="{StaticResource PastelBackground}"/>
</ResourceDictionary>